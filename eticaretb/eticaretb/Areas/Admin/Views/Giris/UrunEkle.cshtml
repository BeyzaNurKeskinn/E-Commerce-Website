@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@model eticaretb.Models.Urun

<!-- RENDER -->

    <div class="row">
        <div class="col-md-12">
        @using (Html.BeginForm("UrunEkle", "Giris", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
        
                <div class="form-horizontal">

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><strong>Ürün</strong></h3>



                            <ul class="panel-controls">
                                <li><a href="#" class="panel-remove"><span class="fa fa-times"></span></a></li>
                            </ul>
                        </div>

                        <div class="panel-body">



                            <div class="form-group">
                                <label class="col-md-3 col-xs-12 control-label">Kategori Id</label>
                                <div class="col-md-6 col-xs-12">
                                <input type="text" class="form-control" name="CATEGORYID" value="" />
                                    <span class="help-block"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-3 col-xs-12 control-label">Ürün Adı</label>
                                <div class="col-md-6 col-xs-12">
                                <input type="text" class="form-control" name="ITEMNAME" value="" />
                                    <span class="help-block"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-3 col-xs-12 control-label">Birim Fiyat</label>
                                <div class="col-md-6 col-xs-12">
                                <input type="text" class="form-control" name="UNITPRICE" value="" />
                                    <span class="help-block"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-3 col-xs-12 control-label">Açıklama</label>
                                <div class="col-md-6 col-xs-12">
                                <input type="text" class="form-control" name="ACIKLAMA" value="" />
                                    <span class="help-block"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-3 col-xs-12 control-label">Durum</label>
                                <div class="col-md-6 col-xs-12">
                                <input type="text" class="form-control" name="ITEMSTATE" value="" />
                                    <span class="help-block"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-3 col-xs-12 control-label">Marka</label>
                                <div class="col-md-6 col-xs-12">
                                <input type="text" class="form-control" name="BRAND" value="" />
                                    <span class="help-block"></span>
                                </div>
                            </div>


                        <div class="form-group">
                            <label class="col-md-3 col-xs-12 control-label">URL</label>
                            <div class="col-md-6 col-xs-12">
                                <input type="text" class="form-control" name="URL" value="" />
                                <span class="help-block"></span>
                            </div>
                        </div>




                        </div>
                        <div class="panel-footer">
                            <button class="btn btn-default">Temizle</button>
                            <button class="btn btn-primary pull-right">Kaydet</button>
                        </div>
                    </div>
                </div>



            }
            </div>
    </div>

<!-- RENDER -->
