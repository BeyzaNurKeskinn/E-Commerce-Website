@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<eticaretb.Models.Slider>
<!-- RENDER -->
    <div class="row">
        <div class="col-md-12">           
                <div class="form-horizontal">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><strong>Slider</strong></h3>
                            <ul class="panel-controls">
                                <li><a href="#" class="panel-remove"><span class="fa fa-times"></span></a></li>
                            </ul>
                        </div>

                        <div class="panel-body">


                        @foreach (var item in Model)
                        {
                            <div class="form-group">
                                <label class="col-md-3 col-xs-12 control-label">Resim</label>
                                <div class="col-md-6 col-xs-12">
                                <img src="@item.Resim" width="50" height="50" name="Resim" alt="IMG-PRODUCT">
                                
                                    <span class="help-block"></span>
                                </div>
                            </div>



                            <div class="form-group">
                                <label class="col-md-3 col-xs-12 control-label">Başlık</label>
                                <div class="col-md-6 col-xs-12">
                                <input type="text" class="form-control" name="Başlık" value="@item.Baslik" />
                                    <span class="help-block"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-3 col-xs-12 control-label">Alt Başlık</label>
                                <div class="col-md-6 col-xs-12">
                                <input type="text" class="form-control" name="AltBaslik" value="@item.AltBaslik" />
                                    <span class="help-block"></span>
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="col-md-3 col-xs-12 control-label">Sıra</label>
                                <div class="col-md-6 col-xs-12">
                                <input type="text" class="form-control" name="Sira" value="@item.Sira" />
                                    <span class="help-block"></span>
                                </div>
                            </div>


                    }

                        </div>
                    </div>
                </div>



            
            </div>
    </div>

<!-- RENDER -->
